<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="353.0" prefWidth="541.0" spacing="10" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.iesalandalus.programacion.alquilervehiculos.vista.grafica.controladores.ListarVehiculos">
   <HBox alignment="TOP_CENTER" prefHeight="56.0" prefWidth="542.0" VBox.vgrow="ALWAYS">
      <children>
         <Label text="Lista de vehículos">
            <font>
               <Font name="System Bold Italic" size="18.0" />
            </font>
         </Label>
      </children>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
   </HBox>
    <TableView fx:id="tvVehiculos" prefHeight="410.0" prefWidth="544.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="tcMatricula" prefWidth="100.0" resizable="false" text="Matrícula" />
            <TableColumn fx:id="tcMarca" prefWidth="100.0" resizable="false" text="Marca" />
            <TableColumn fx:id="tcModelo" prefWidth="100.0" resizable="false" text="Modelo" />
            <TableColumn fx:id="tcCilindrada" resizable="false" text="Cilindrada" />
            <TableColumn fx:id="tcPlazas" resizable="false" text="Plazas" />
            <TableColumn fx:id="tcPma" resizable="false" text="PMA" />
        </columns>
    </TableView>
    <Button fx:id="btnAceptar" onAction="#aceptar" prefHeight="36.0" prefWidth="58.0" text="Aceptar" VBox.vgrow="ALWAYS">
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding></Button>
</VBox>
